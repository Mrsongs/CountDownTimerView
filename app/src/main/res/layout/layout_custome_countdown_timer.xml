<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg">

    <com.jmgo.countdowntimerview.widget.CustomPickNumberView
        android:id="@+id/customCountDownView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/bt_begin"
        android:layout_width="290px"
        android:layout_height="74px"
        android:layout_below="@+id/customCountDownView"
        android:layout_marginTop="200px"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_countdown_selector"
        android:textColor="@color/text_color_selector"
        android:text="开始"
         />
</RelativeLayout>